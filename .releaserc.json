{
  "verifyConditions": [
    "@semantic-release/changelog",
    "@semantic-release/git"
  ],
  "prepare": [
    "@semantic-release/changelog",
    {
      "path": "@semantic-release/exec",
      "cmd": "echo \"${nextRelease.version}\" > .release-version"
    },
    {
      "path": "@semantic-release/git",
      "assets": [
        "CHANGELOG.md"
      ],
      "message": "release: ${nextRelease.version} [ci skip]"
    }
  ],
  "publish": false,
  "success": false,
  "fail": false
}